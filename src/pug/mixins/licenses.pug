-
  const licenses = [
    {
      img: "licenses-1.png",
      text: "Аккредитация Министерства цифрового развития РФ"
    },
    {
      img: "licenses-2.png",
      text: "ФСБ"
    },
    {
      img: "licenses-3.png",
      text: "ФСТЭК"
    },
    {
      img: "licenses-4.png",
      text: "МЧС"
    }
  ]

mixin licenses()
  section.licenses(data-scroll-section)&attributes(attributes)
    .container
      h2.licenses__title.section-title.is-words-up(data-splitting="chars" data-scroll data-scroll-offset="10%")
        | Лицензии
      ul.licenses__list(data-scroll data-scroll-offset="20%")
        for item in licenses
          li.licenses__item
            +picture(item.img)
            p.licenses__item-text= item.text
